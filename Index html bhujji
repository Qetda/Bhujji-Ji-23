<script>
let score=0,currentQ=1;
function go(id){
  document.querySelectorAll('.screen').forEach(s=>s.classList.remove('active'));
  document.getElementById(id).classList.add('active');
}
function ans(correct){
  if(correct) score++;
  currentQ++;
  if(currentQ<=4) go('q'+currentQ);
  else go('cake');
}

// Slider
let idx=0;
const imgs=document.querySelectorAll('.slider img');
function show(i){imgs.forEach(im=>im.classList.remove('active'));imgs[i].classList.add('active');}
function next(){idx=(idx+1)%imgs.length;show(idx);}
function prev(){idx=(idx-1+imgs.length)%imgs.length;show(idx);}
</script>
